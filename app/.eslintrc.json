{
  "root": false,
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint", "prettier"],
  "extends": [
    "@feature-sliced",
    "next/core-web-vitals",
    "next/typescript",
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ],
  "rules": { "prettier/prettier": "warn", "import/no-internal-modules": "off" },
  "settings": {
    "feature-sliced": {
      "layers": [
        "app",
        "screens",
        "processes",
        "widgets",
        "features",
        "entities",
        "shared"
      ]
    }
  }
}
